{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div>
        <h1>Profil</h1>
            <div class="formInscription">
                <table class="tableFieldset">
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ user.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prenom</th>
                            <td>{{ user.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Genre</th>
                            <td>{{ user.genre }}</td>
                        </tr>
                        <tr>
                            <th>Telephone</th>
                            <td>{{ user.telephone }}</td>
                        </tr>
                        <tr>
                            <th>Adresse</th>
                            <td>{{ user.adresse }}</td>
                        </tr>
                        <tr>
                            <th>Ville</th>
                            <td>{{ user.ville }}</td>
                        </tr>
                        <tr>
                            <th>Region</th>
                            <td>{{ user.region }}</td>
                        </tr>
                        <tr>
                            <th>Pays</th>
                            <td>{{ user.pays }}</td>
                        </tr>
                        <tr>
                            <th>Role</th>
                            <td>{{ user.role }}</td>
                        </tr>
                    </table>
                <p align ="center">
                <input type="submit" href="{{ path('users_edit', { 'id': user.id }) }}" class="btn btn-primary" value="Editer" />
                </p>
            </div>
        </div>

    
{% endblock %}
