{% extends 'base.html.twig' %}
{% block header %}{% endblock %}
{% block title %}Profil{% endblock %}

{% block body %}
<div class="col-xs-12" id="content">

        <h1 class='pageTitle'>Profil</h1>
                <table align="center">
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ user.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>{{ user.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Genre</th>
                            <td>{{ user.genre }}</td>
                        </tr>
                        <tr>
                            <th>Ville</th>
                            <td>{{ user.ville }}</td>
                        </tr>
                        <tr>
                            <th>Région</th>
                            <td>{{ user.region }}</td>
                        </tr>
                        <tr>
                            <th>Pays</th>
                            <td>{{ user.pays }}</td>
                        </tr>
                    </table>

</div>
{% endblock %}
