{% extends 'base.html.twig' %}
{% block header %}{% endblock %}
{% block title %}Profil{% endblock %}

{% block body %}
<div class="col-xs-12" id="content">

        <h1 class='pageTitle'>Profil</h1>
                <table>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ user.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prenom</th>
                            <td>{{ user.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Genre</th>
                            <td>{{ user.genre }}</td>
                        </tr>
                        <tr>
                            <th>Telephone</th>
                            <td>{{ user.telephone }}</td>
                        </tr>
                        <tr>
                            <th>Adresse</th>
                            <td>{{ user.adresse }}</td>
                        </tr>
                        <tr>
                            <th>Ville</th>
                            <td>{{ user.ville }}</td>
                        </tr>
                        <tr>
                            <th>Region</th>
                            <td>{{ user.region }}</td>
                        </tr>
                        <tr>
                            <th>Pays</th>
                            <td>{{ user.pays }}</td>
                        </tr>
                                {% if user.role == 'ROLE_ADMIN' %}
                        <tr>
                            <th>Role</th>
                            <td>
                                Administrateur
                            </td>
                        </tr>
                                {%elseif user.role == 'ROLE_MODERATEUR' %}
                        <tr>
                            <th>Role</th>
                            <td>
                                Mod√©rateur
                            </td>
                        </tr>
                            {%endif%}

                    </table>
                <ul>
                    <li>
                        <a href="{{ path('users_edit', { 'id': user.id }) }}">Edition</a>
                    </li>
                </ul>

                <a class="btn btn-default" href="{{ path('articles_new') }}">Voir mes articles</a>

</div>
{% endblock %}
