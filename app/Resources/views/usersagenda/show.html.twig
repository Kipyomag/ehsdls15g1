{% extends 'base.html.twig' %}

{% block body %}
    <h1>UsersAgenda</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ usersAgenda.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ usersAgenda.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ usersAgenda.prenom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ usersAgenda.telephone }}</td>
            </tr>
            <tr>
