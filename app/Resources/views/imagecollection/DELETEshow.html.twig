{% extends 'base.html.twig' %}

{% block body %}
    <h1>ImageCollection</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ imageCollection.id }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{% if imageCollection.images %}{{ imageCollection.images|join(', ') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('imagecollection_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('imagecollection_edit', { 'id': imageCollection.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
