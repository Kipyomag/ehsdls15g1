<div class="col-xs-12 col-md-3" id="rightSidebar">

        <div id="calendar" class="list-group">
            <div class="list-group-item">
                <p align="center">Evènements à venir</p>
                {% for agenda in agendas %}
                    <a class="list-group-item" href="{{ path('agenda_show', { 'id': agenda.id }) }}">{{ agenda.title }}<br/>{{ agenda.startingDate|date('d-m-Y') }}</a>                
                {% endfor %}
            {% if is_granted('ROLE_ADMIN') %}
                <a class="list-group-item" href="{{ path('agenda_new') }}">+ Ajouter un évènement</a></br>
                <a href="{{ path('agenda_index') }}" class="list-group-item">Voir tout les évènements</a>
            {% endif %}
            </div>
        </div>
        <div id="sidebarActions" class="list-group">
            <a href="{{ path('newsletter_index') }}" class="list-group-item">FORMULAIRE NEWSLETTER</a>

            <a href="#" class="list-group-item">FACEBOOK</a>
            <a href="#" class="list-group-item">TWITTER</a>
            {% if is_granted('ROLE_MODERATEUR') %}
                <a href="{{ path('articles_index') }}" class="list-group-item">Proposer un article</a>
            {% endif %}
        </div>
    </div>
</div>