{% extends 'base.html.twig' %}

{% block title %}Archives{% endblock %}

{% block body %}
<div class="col-xs-12">
    <h1>Archives</h1>

    <table>
        <thead>
            <tr>
                <th>Archive</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for archive in archives %}
            <tr>
                <td>{{ archive.titre }}</td>
                <td>{% if archive.date %}{{ archive.date|date('d-m-Y') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('archive_show', { 'id': archive.id }) }}">show</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="{{ path('archive_edit', { 'id': archive.id }) }}">edit</a>
                        </li>
                        {%endif%}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
    <ul>
        <li>
            <a href="{{ path('archive_new') }}">Create a new entry</a>
        </li>
    </ul>
    {%endif%}
</div>
{% endblock %}
