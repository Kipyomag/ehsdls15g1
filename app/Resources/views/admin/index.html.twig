{% extends 'base.html.twig' %}

{% block title %}Panneau d'administration{% endblock %}

{% block body %}
      
    
    <!-- MAIN ARTICLE -->
    <div class="col-xs-12 col-md-9">
        <div class="jumbotron">
            <h1>Administration</h1>
            <div class="col-lg-6">
                <form action="{{ path('admin_users_search') }}" method="post">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">Go!</button>
                        </span>
                        <input type="search" class="form-control" id="search" name="search" placeholder="Chercher un utilisateur">
                    </div><!-- /input-group -->
                </form>
            </div><!-- /.col-lg-6 -->
        </div>
                
        
        <div class="col-sm-6">
            <div class="jumbotron">
                <p align="center">
