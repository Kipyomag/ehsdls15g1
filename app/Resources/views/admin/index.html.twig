                    <a class="list-group-item" href="{{ path('admin_users_new') }}">Ajouter un utilisateur</a>
                    <a class="list-group-item" href="{{ path('usersagenda_index') }}">Liste des adhésions aux évènements</a>
                    <a class="list-group-item" href="{{ path('agenda_new') }}">Ajouter un évènement</a>
                    <a class="list-group-item" href="{{ path('agenda_index') }}">Liste des évènements</a>
                </p>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="jumbotron">
                <p align="center">
                    <a class="list-group-item" href="{{ path('articles_new') }}">Publier un article</a>
                    <a class="list-group-item" href="{{ path('admin_listeArticles') }}">Liste des articles</a>
                    <a class="list-group-item" href="{{ path('archive_new') }}">Ajouter des archives</a>
                    <a class="list-group-item" href="{{ path('imagecollection_new') }}">Publier des photos dans la galerie</a>
                    <a class="list-group-item" href="{{ path('newsletter_index') }}">Newsletter</a>
                </p>
            </div>
        </div>
    </div>
    
    
        
    
