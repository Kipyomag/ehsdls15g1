{% extends 'base.html.twig' %}
{% block header %}{% endblock %}
{% block title %}Edition Article{% endblock %}

{% block body %}
<div id="editArticlePage" class="col-xs-12">
        <a class="btn btn-default" href="{{ path('articles_index') }}"><span class="glyphicon glyphicon-chevron-left"></span> Retour aux articles</a>
    <div class="articleForm">
        <h1 class='pageTitle'>Editer un article</h1>

        {{ form_start(edit_form) }}
            {{ form_row(edit_form.titre, {'label':'Titre:'}) }}
            {{ form_row(edit_form.chapeau, {'label':'Chapeau:'}) }}
            {{ form_row(edit_form.contenu, {'label':'Article:'}) }}
            {% if article.status == 'progress' %}
                {{ form_row(edit_form.save) }}
                {{ form_row(edit_form.send) }}
            {% elseif is_granted('ROLE_ADMIN') %}
                <input type="submit" value="Modifier" />
            {% endif %}
            {{ form_widget(edit_form._token) }}
        {{ form_end(edit_form, {'render_rest': false}) }}
    </div>

    <div class="deleteForm">
    {{ form_start(delete_form) }}
        <input type="submit" value="Supprimer">
    {{ form_end(delete_form) }}
    </div>
</div>
{% endblock %}
