{% extends 'base.html.twig' %}

{% block body %}
    
    <h1>Liste des articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Chapeau</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('articles_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.titre }}</td>
                <td>{{ article.contenu }}</td>
                <td>{{ article.chapeau }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('articles_show', { 'id': article.id }) }}">Montrer</a>
                        </li>
                        <li>
                            <a href="{{ path('articles_edit', { 'id': article.id }) }}">Edition</a>
                        </li>
                    </ul>
                </td>
            </tr>
            
            <div>

            </div>
        {% endfor %}
        </tbody>
    </table>


    <ul>
        <li>
            <a href="{{ path('articles_new') }}">Creer un nouvel article</a>
        </li>
    </ul>
{% endblock %}
