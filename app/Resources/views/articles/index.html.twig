{% extends 'base.html.twig' %}


    {% block title %}Actu{% endblock %}

    {% block body %}

        <div class="container">
            <div class="row">
            {% for article in articles %}
                <div class="col-md-4 col-sm-6 feature text-center">
                    <span class="icon icon-tools"></span>
                    <div class="feature-content">
                        <h5>{{ article.titre }}</h5>
                        <p class='chapeau'>{{ article.chapeau }}</p>
                    </div>
                    <div>
                    <p>{{ article.date|date("d/m/Y") }} auteur: {{ article.author.nom }} {{ article.author.prenom }}</p>

                        <a class="btn btn-default" href="{{ path('articles_show', { 'id': article.id }) }}" role="button">Voir</a>
                            {% if is_granted('ROLE_MODERATEUR') %}
                                <a class="btn btn-default" href="{{ path('articles_edit', { 'id': article.id }) }}" role="button">Modifier</a>
                            {% endif %}

                    </div>
                </div>
            {% endfor %}

            </div>
        </div>

        <a href="{{ path('articles_page', { 'nbr': 1 }) }}">Voir tous les articles</a>


    

{% endblock %}


